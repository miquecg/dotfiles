{
  "codeLens.enable": true,
  "elixirLS.dialyzerEnabled": false,
  "languageserver": {
    "erlang": {
      "command": "erlang_ls",
      "filetypes": ["erlang"]
    },
    "gleam": {
      "command": "gleam",
      "args": ["lsp"],
      "filetypes": ["gleam"],
      "rootPatterns": ["gleam.toml", ".git"]
    }
  }
}
