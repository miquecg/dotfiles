[user]
  email = {{ .email }}
  name = Miguel C.

[alias]
  co = checkout
  lg = log --graph --all
  lgs = log --graph --all --abbrev-commit --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  sh = show
  shn = show --name-status
  st = status
  sw = switch

[core]
  editor = vim
  excludesfile = ~/.gitignore
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true
  side-by-side = true
  syntax-theme = GitHub

[diff]
  colorMoved = default

[merge]
  conflictstyle = diff3
